<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="space-1"></div>
      <div class="space-1 hidden-md-down"></div>

      <div class="card shade-1 hover marg-bot-2">
        <div class="card-block">
          <h3 class="special marg-bot-1">
            The Metric email list
          </h3>

          <p class="marg-bot-0">
            Users sign up for the email list via our website. If a user asks to be removed from the email list, admins can delete their email off of the list from this page.
          </p>
        </div>
      </div>

      <% if @emails and @emails.length > 0 %>
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Email</th>
              <% if current_admin and (current_admin.super or current_admin.id == 1) %>
                <th>Delete</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @emails.each_with_index do |e, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= e.email %></td>
                <% if current_admin and (current_admin.super or current_admin.id == 1) %>
                  <td>
                    <%= link_to email_path(e), method: :delete, data: { confirm: 'Delete email: are you sure you want to delete this email?' } do %>
                      <i class="fa fa-times text-muted" aria-hidden="true"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>
          Looks like we don't have any emails on file yet.
        </p>
      <% end %>

      <div class="space-2"></div>
      <%= link_to 'Back to home', root_path, class: 'btn-blue white-text shade-3 hover' %>
      <div class="space-4"></div>
    </div>
  </div>
</div>
