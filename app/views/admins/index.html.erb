<div class="container marg-top-2">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h2 class="special marg-bot-1">
        Listing all admins
      </h2>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each_with_index do |a, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <%= link_to a do %>
                  <%= a.name %>
                <% end %>
              </td>
              <td><%= a.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div className="space-2"></div>
    </div>
  </div>
</div>
