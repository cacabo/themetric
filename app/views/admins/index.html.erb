<div class="light-gray full-height">
  <div class="space-4"></div>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="white pad-1 bord-top-thick">
          <h1 class="marg-bot-1">
            Meet our admins and contributors
          </h1>

          <% @admins.each do |a| %>
            <%= link_to a, class: 'admin' do %>
              <div class="admin-img" style="background-image: URL(<%= a.image.url(:large) if (not a.image_file_name.nil? and not a.image.nil?) %>)">
              </div>
              <div class="admin-content">
                <% if a.name %>
                  <h3><%= a.name %></h3>
                <% elsif a.email %>
                  <p><%= a.email %></p>
                <% end %>
                <% if a.bio %>
                  <p><%= a.bio %></p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="space-4"></div>
</div>
