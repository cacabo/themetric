<head>
  <% title 'The Metric | Contact' %>
  <% description "Please reach out" %>
</head>

<div class="light-gray full-height">
  <div class="space-2"></div>
  <div class="space-2 hidden-sm-down"></div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="white pad-2 border shade-1 hover">
          <h2 class="special">Contact us</h2>
          <p class="marg-bot-0">
            Want to get involved? Have more questions about who we are? Have feedback on how we can improve? Send us a message and we will be prompt and thorough in our response.
          </p>
          <%= bootstrap_form_for @contact do |f| %>
          <div class="field special-label">
            <%= f.text_field :name, wrapper: { class: 'marg-bot-0' }, required: true %>
          </div>
          <div class="field special-label">
            <%= f.email_field :email, wrapper: { class: 'marg-bot-0' }, required: true %>
          </div>
          <div class="field special-label marg-bot-2">
            <%= f.text_area :message, required: true, rows: 1 %>
          </div>
          <div class="hidden">
            <%= f.text_field :nickname, hint: 'Leave this field blank' %>
          </div>

          <%= f.submit 'Send message', class: 'btn-blue shade-3 hover' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- closing container -->
  <div class="space-4"></div>
</div>
<!-- closing light gray -->
