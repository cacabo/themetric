<% if @feature %>
  <div class="background-image parallax feature" style="background-image: <%= @feature.image.url(:large) if (not @feature.image_file_name.nil? and not @feature.image.nil?) %>">
    <div class="content">
      <% if @feature.title %>
        <h1 class="title">
          <%= @feature.title %>
        </h1>
      <% end %>
      <% if @feature.subtitle %>
        <h2 class="serif subtitle">
          <%= @feature.subtitle %>
        </h2>
      <% end %>
    </div>
  </div>
<% end %>

<div class="container marg-bot-2">
  <div class="row">
    <div class="col-12">
      <div class="popup black">
        <i class="fa fa-lg fa-times x"></i>
        <h1 class="special marg-bot-1">
          Welcome to the Youth Journal
        </h1>
        <p>
          We aim to make news interactive, informative, and actionable. Through a global network of young, dedicated talent, we try to collect the right resources and information to accomplish this aim.
        </p>
      </div>

      <div class="space-1"></div>

      <h1>
        Hi there!
      </h1>

      <p>
        Why is this not showing up?
      </p>

      <div class="space-2"></div>

      <%= link_to articles_path do %>
      <div class="btn-black">
        View all articles <i class="fa fa-chevron-right"></i>
      </div>
      <% end %>
    </div>
  </div>
</div>
