<div class="container-fluid">
  <div class="row pad-0">
    <div class="col-12 col-md-8 pad-0">
      <% if @feature %>
        <%= link_to @feature do %>
          <div class="background-image parallax feature" style="background-image: URL(<%= @feature.image.url(:large) if (not @feature.image_file_name.nil? and not @feature.image.nil?) %>)">
            <div class="content">
              <% if @feature.title %>
                <h1 class="title">
                  <%= @feature.title %>
                </h1>
              <% end %>
              <div class="space-0"></div>
              <% if @feature.subtitle %>
                <h2 class="serif subtitle">
                  <%= @feature.subtitle %>
                </h2>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% if @eight %>
        <div class="container-fluid">
          <p class="text-muted bold full-width marg-bot-1">
            AROUND THE WORLD
          </p>
          <div class="card-columns articles">
            <% @eight.each do |a| %>
                <%= link_to a do %>
                  <div class="card">
                    <%= render a %>
                  </div>
                <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <!-- closing left col -->
    <div class="col-12 col-md-4 pad-top-1 light-gray full-height">
      <% if @three and @three.length > 0 %>
        <p class="text-muted bold full-width marg-bot-1">
          GLOBAL TAKES
        </p>
        <% @three.each do |article| %>
          <%= link_to article do %>
            <!-- article image -->
            <% if not article.image.nil? and not article.image_file_name.nil? %>
              <%= image_tag article.image.url(:medium), class: 'img-fluid full-width marg-bot-1' %>
            <% end %>

            <!-- article title and subtitle -->
            <h1 class="sans title smaller"><%= article.title %></h1>
            <h2 class="subtitle smaller"><%= article.subtitle %></h2>
            <% unless article == @three.last %>
              <div class="line-1"></div>
            <% end %>
          <% end %>
          <!-- closing link to article -->
        <% end %>
        <!-- close looping over three -->
      <% end %>
      <!-- close checking for three -->

      <div class="space-2"></div>

      <%= link_to articles_path do %>
        <div class="btn-black">
          View all articles <i class="fa fa-chevron-right"></i>
        </div>
      <% end %>

      <div class="space-2"></div>
    </div>
    <!-- closing right col -->
  </div>
</div>
