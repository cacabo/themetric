<head>
  <title>The Metric | Log In</title>
</head>

<div class="light-light-gray full-height">
  <div class="space-1"></div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <p class="section-title">Admin Login</p>
        <div class="white pad-2 hover">
          <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="space-05"></div>

            <div class="field">
              <%= f.email_field :email, label_class: 'hasVal active', autofocus: true, required: true %>
            </div>

            <div class="space-05"></div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", required: true %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field marg-bot-1">
                <%= f.check_box :remember_me %>
              </div>
            <% end -%>

            <%= button_tag(type: 'submit', class: "btn-blue shade-3 hover") do %>
              Log in
            <% end %>
          <% end %>

          <div class="space-1"></div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
