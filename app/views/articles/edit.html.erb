<head>
  <% title 'The Metric | Edit Article' %>
  <% description 'Edit a previously written blogpost' %>
</head>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">

      <%= render 'form' %>

      <div class="space-2"></div>
      <%= link_to @article do %>
        <button class="btn-black">
          <i class="fa fa-chevron-left" aria-hidden="true"></i>
          &nbsp;Back to article
        </button>
      <% end %>
    </div>
  </div>
</div>
