<!-- include the image if there is one -->
<% if not article.image.nil? and not article.image_file_name.nil? %>
  <div class="card-img-top background-image" style="background-image: URL(<%= article.image.url(:large) %>)">
    <h1 class="sans title smaller up">
      <span class="underline"><%= article.title %></span>
    </h1>
  </div>
<% end %>

<!-- article title and subtitle -->
<div class="card-block">
  <% unless current_admin and article.published %>
    <div class="light-gray pad-1 special text-muted marg-bot-1">
      ARTICLE NOT PUBLISHED
    </div>
  <% end %>

  <% if current_admin and article.featured %>
    <div class="light-gray pad-1 special text-muted marg-bot-1">
      ARTICLE FEATURED
    </div>
  <% end %>
  
  <% if article.image.nil? or article.image_file_name.nil? %>
    <h1 class="sans title smaller"><span class="underline"><%= article.title %></span></h1>
  <% end %>
  <h2 class="subtitle smaller"><%= article.subtitle %></h2>
  <div class="space-0"></div>

  <p class="time sans inline float-right">
    <%= time_ago_in_words(article.created_at) %> ago
  </p>
  <% r = article.regionText %>
  <% if r and r.length > 0 %>
    <%= link_to region_path(article.region), class: "full-width region special marg-bot-0 black-text relative" do %>
      <%= r %>
    <% end %>
  <% end %>
</div>
